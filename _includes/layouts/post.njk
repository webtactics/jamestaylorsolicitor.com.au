---
layout: layouts/detail.njk
section: post
---




<article{% if post.url == url %} data-current="current item"{% endif %} >
<div class="item postdetail">
<div class="postdetailimage" align="center"><img src="{{ image }}/tr:w-900,h-600" alt="{{ imageAlt }}" title="{{ imageAlt }}"></div>

<div class="postdetaildescription">     
{% if description %}<p><strong> {{ description }} </strong></p>{% endif %}
</div>


<div class="postdetailcontent">     
{{ layoutContent | safe }}
</div>




 
  
  
    
</div>
</article>
<nav class="childlist">
  {% set navPages = collections.all | eleventyNavigation %}
  
  {% macro hasActiveChild(entry) -%}
    {% set isActive = entry.url == page.url %}
    {% for child in entry.children %}
      {% set isActive = isActive or hasActiveChild(child) %}
    {% endfor %}
    {% set _ = entry.children | map(hasActiveChild) %}
    {% set isActive = isActive or entry.children | join %}
    {% return isActive %}
  {%- endmacro %}
  
  {% macro renderNavListItem(entry) -%}
    {% set isParent = entry.children.length > 0 %}
    {% set childIsActive = hasActiveChild(entry) %}
    
    <li{% if entry.url == page.url %} class="active-class"{% endif %}
        {% if isParent and childIsActive %} class="parent"{% endif %}>
      <a href="{{ entry.url }}">{{ entry.title }}</a>

      {% if isParent %}
        <ul class="second-level">
          {% for child in entry.children %}{{ renderNavListItem(child) }}{% endfor %}
        </ul>
      {% endif %}
    </li>
  {%- endmacro %}
  
  <ul class="main-menu">
    {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
  </ul>
</nav>
